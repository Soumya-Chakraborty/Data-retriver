{
  "manifest_version": 3,
  "name": "Data Entry Tool",
  "version": "1.0",
  "description": "Shortcuts-based tool to streamline data entry from web pages",
  "permissions": [
    "activeTab",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "ctrl+shift+1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Cmd+Shift+1"
      },
      "description": "Create new row and set CompanyName"
    },
    "ctrl+shift+2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Cmd+Shift+2"
      },
      "description": "Set Website for current row"
    },
    "ctrl+shift+3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Cmd+Shift+3"
      },
      "description": "Set LinkedIn for current row"
    },
    "ctrl+shift+4": {
      "suggested_key": {
        "default": "Ctrl+Shift+4",
        "mac": "Cmd+Shift+4"
      },
      "description": "Set TeamMember1 for current row"
    },
    "ctrl+shift+5": {
      "suggested_key": {
        "default": "Ctrl+Shift+5",
        "mac": "Cmd+Shift+5"
      },
      "description": "Set TeamMember2 for current row"
    }
  }
}